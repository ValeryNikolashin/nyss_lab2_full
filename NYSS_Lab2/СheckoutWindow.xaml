<Window x:Class="NYSS_Lab2.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NYSS_Lab2"
        mc:Ignorable="d"
        Title="Локальный файл БД не найден или повреждён" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Margin="10,10,10,10">Загрузить файл из официального банка данных угроз ФСТЭК России?</TextBlock>

        

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,35,10,10">
            <Button x:Name="btnYes" IsDefault="True" MinWidth="60" Margin="0,0,10,0" Click="btnYes_Click">Да</Button>
            <Button x:Name="btnNo" IsCancel="True" MinWidth="60" Click="btnNo_Click">Нет</Button>
        </WrapPanel>
    </Grid>
</Window>
